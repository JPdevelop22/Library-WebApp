@page "{TitleSearch?}"
@model Project.Pages.Books.IndexModel

@{
    ViewData["Title"] = "Lista de libros";
}

<h1 class="my-5 pb-3">@ViewData["Title"]</h1>

<form class="mb-3">
    <p>Titulo del libro: <input class="w-auto" type="text" placeholder="ej: Nombre del libro" asp-for = "TitleSearch" placeholder="ej: Nombre del libro">
        <input class="btn btn-info" type="submit" value="Buscar">
    </p>
</form>

<p class="float-right w-auto">
    <a class="btn btn-primary" asp-page="Create">Crear nuevo</a>
</p>

<table class="table">
    <thead class="bg-info shadow">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].RelaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Book) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a aria-label="Editar celda" class="btn btn-outline-primary btn-sm my-1" asp-page="./Edit" asp-route-id="@item.ID">
                    <i aria-hidden="false" class="fas fa-edit"></i>
                </a>
                <a aria-label="Detalles de la celda" class="btn btn-outline-primary btn-sm my-1" asp-page="./Details" asp-route-id="@item.ID">
                    <i class="fas fa-info-circle"></i>
                </a>
                <a aria-label="Eliminar celda" class="btn btn-outline-primary btn-sm my-1" asp-page="./Delete" asp-route-id="@item.ID">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
